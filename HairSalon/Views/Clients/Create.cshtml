@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client

<header>
    <h1>Add Client</h1>
    <ul class="nav">
        <li>@Html.ActionLink("Stylists", "Index", "Home")</li>
        <li>@Html.ActionLink("Add Stylist", "Create", "Stylists")</li>
        <li>@Html.ActionLink("Clients", "Details", "Stylists", new { id = ViewBag.StylistId })</li>
    </ul>
</header>
<main>
    @using (Html.BeginForm())
    {
        @Html.Hidden("StylistId", (int) ViewBag.StylistId)

        <div class="form-entry">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name)
        </div>

        <input type="submit" value="Add Client">
    }
</main>