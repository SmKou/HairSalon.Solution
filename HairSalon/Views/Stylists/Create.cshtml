@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<header>
    <h1>Add Stylist</h1>
    <ul class="nav">
        <li>@Html.ActionLink("Stylists", "Index", "Home")</li>
    </ul>
</header>
<main>
    @using (Html.BeginForm())
    {
        <div class="form-entry">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name)
        </div>

        <input type="submit" value="Add Stylist">
    }
</main>