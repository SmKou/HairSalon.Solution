@{
    Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist

<header>
    <h1>Stylist: @Model.Name</h1>
    <ul class="nav">
        <li>@Html.ActionLink("Edit", "Edit", new { id = Model.StylistId })</li>
        <li>@Html.ActionLink("Delete", "Delete", new { id = Model.StylistId })</li>
        <li>@Html.ActionLink("Add Client", "Create", "Clients")</li>
    </ul>
</header>
<main>
    @if (@Model.Clients.Count == 0)
    {
        <p>This stylist has no clients yet.</p>
        <p>@Html.ActionLink("Add Client", "Create", "Clients", new { id = Model.StylistId })</p>
    }

    <ul class="listings list-3-left">
        @foreach (Client client in Model.Clients)
        {
            <li>
                <div>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</div>
                <div>@Html.ActionLink("Edit", "Edit", "Clients", new { id = client.ClientId })</div>
                <div>@Html.ActionLink("Delete", "Delete", "Clients", new { id = client.ClientId })</div>
            </li>
        }
    </ul>
</main>
<footer>
    <ul class="nav">
        <li>@Html.ActionLink("Specialties", "Index", "Specialties")</li>
        <li>@Html.ActionLink("Add Specialty", "Create", "Specialties")</li>
        <li>@Html.ActionLink("Stylists", "Index", "Home")</li>
        <li>@Html.ActionLink("Add Stylist", "Create")</li>
    </ul>
</footer>